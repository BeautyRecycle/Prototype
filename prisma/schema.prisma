// Eco Beauty Circular — Prisma Schema
// Domain models for circular economy packaging platform

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// ── User (synced from Clerk on first login) ──
model User {
    id          String   @id @default(cuid())
    clerkId     String   @unique
    email       String
    name        String?
    imageUrl    String?
    totalPoints Int      @default(0)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    scans       Scan[]
    redemptions Redemption[]

    @@index([clerkId])
}

// ── Scan (one per package return event) ──
model Scan {
    id           String   @id @default(cuid())
    packageId    String
    material     String // PET, HDPE, Glass, Aluminum, Mixed
    fate         String // reuse | energy
    co2SavedKg   Float
    pointsEarned Int
    userId       String
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    createdAt    DateTime @default(now())

    @@index([userId])
    @@index([createdAt])
}

// ── Reward (eco-brand marketplace items) ──
model Reward {
    id          String   @id @default(cuid())
    name        String
    description String
    pointsCost  Int
    imageUrl    String
    stock       Int      @default(100)
    isActive    Boolean  @default(true)
    createdAt   DateTime @default(now())

    redemptions Redemption[]
}

// ── Redemption (user claims a reward) ──
model Redemption {
    id        String   @id @default(cuid())
    userId    String
    rewardId  String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    reward    Reward   @relation(fields: [rewardId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())

    @@unique([userId, rewardId]) // Prevents double redemption
    @@index([userId])
}
